<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>ConfirmBookingServlet</servlet-name>
        <servlet-class>com.controller.ConfirmBookingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TourListServlet</servlet-name>
        <servlet-class>com.controller.TourListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VnPayServlet</servlet-name>
        <servlet-class>com.controller.VnPayServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VnPayReturnServlet</servlet-name>
        <servlet-class>com.controller.VnPayReturnServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VNPayPaymentServlet</servlet-name>
        <servlet-class>com.controller.VNPayPaymentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VNPayReturnServlet</servlet-name>
        <servlet-class>com.controller.VNPayReturnServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConfirmBookingServlet</servlet-name>
        <url-pattern>/ConfirmBookingServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TourListServlet</servlet-name>
        <url-pattern>/TourListServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VnPayServlet</servlet-name>
        <url-pattern>/VnPayServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VnPayReturnServlet</servlet-name>
        <url-pattern>/VnPayReturnServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VNPayPaymentServlet</servlet-name>
        <url-pattern>/VNPayPaymentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VNPayReturnServlet</servlet-name>
        <url-pattern>/VNPayReturnServlet</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
